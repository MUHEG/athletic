  bibtype  = "Manual",
  doi      = "10.5281/zenodo.11043502",
  title    = paste0(meta$Package,": ",meta$Title),
  author   = c(person("Matthew Hamilton <matthew.hamilton1@monash.edu> [aut, cre]", "(<https://orcid.org/0000-0001-7407-9194>)"), person("Fikru Rizal <fikru.rizal@monash.edu> [aut]", "(<https://orcid.org/0000-0002-0064-3255>)")),
  year     = "2025",
  note     = sprintf("R package version %s", meta$Version),
  url      = "https://muheg.github.io/athletic/",
  textVersion = paste("Matthew Hamilton <matthew.hamilton1@monash.edu> [aut, cre] (<https://orcid.org/0000-0001-7407-9194>) and Fikru Rizal <fikru.rizal@monash.edu> [aut] (<https://orcid.org/0000-0002-0064-3255>) ",
  "(2025).",
  paste0(meta$Package,": ",meta$Title,
  "."),
  paste0(sprintf("Version %s", meta$Version),"."),
  paste0("https://doi.org/",
"10.5281/zenodo.11043502")
  )
)
